generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model MainPage {
  id String @id @default(uuid())

  title       String
  description String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id String @id @default(uuid())

  title String
  slug  String @unique

  blogs Blog[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Blog {
  id String @id @default(uuid())

  title       String
  description String

  content String @db.Text

  image String

  author String?
  slug   String  @unique

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Service {
  id             String        @id @default(uuid())
  label          String
  description    String
  content        String
  icon           Icons
  iconColor      Colors
  image          String
  seoTitle       String
  seoDescription String
  slug           String        @unique
  serviceItems   ServiceItem[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model ServiceItem {
  id             String  @id @default(uuid())
  label          String
  description    String?
  image          String
  slug           String  @unique
  seoTitle       String
  seoDescription String
  initialPrice   Float

  serviceId String
  service   Service @relation(fields: [serviceId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Offer {
  id             String @id @default(uuid())
  label          String
  description    String
  content        String
  previousPrice  Float
  currentPrice   Float
  image          String
  seoTitle       String
  seoDescription String
  slug           String @unique

  startDate DateTime
  endDate   DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id String @id @default(uuid())

  type         SubscriptionsPlans @default(BASIC)
  bulletPoints Json[]

  price Float
  label String?
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Icons {
  SOFTWARE
  DESIGN
  AI
  MARKETING
}

enum Colors {
  LIGHT_PINK
  LIGHT_YELLOW
  LIGHT_BLUE
}

enum SubscriptionsPlans {
  BASIC
  STANDARD
  PRO
  UNLIMITED
}
